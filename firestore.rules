rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }
    
    match /sites/{siteId} {
      allow read, write: if isSignedIn();
    }
    
    match /pms/{pmId} {
        allow read, write: if isSignedIn();
    }
    
    match /tasks/{taskId} {
      allow read: if isSignedIn();
    }
    
    match /changeRequests/{crId} {
        allow read, write: if isSignedIn();
    }
  }
}
