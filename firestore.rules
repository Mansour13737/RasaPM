rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /pms/{pmId} {
      allow read, write: if request.auth != null;
    }
    match /pms {
      allow list: if request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /users {
      allow list: if request.auth != null;
    }

    match /sites/{siteId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /sites {
      allow list: if request.auth != null;
    }
  }
}
