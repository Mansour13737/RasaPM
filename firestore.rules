rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----- USERS COLLECTION -----
    match /users/{userId} {
      // A logged-in user can read and write their own data.
      // Admins/PMs can modify other users.
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role in ['Admin', 'PM']);
    }
    
    // Admins/PMs can list all users.
    match /users {
      allow list: if request.auth != null && request.auth.token.role in ['Admin', 'PM'];
    }

    // ----- PMS COLLECTION -----
    match /pms/{pmId} {
      allow read, write: if request.auth != null;
    }
    match /pms {
      allow list: if request.auth != null;
    }

    // ----- SITES COLLECTION -----
    match /sites/{siteId} {
      allow read, write: if request.auth != null;
    }
    match /sites {
      allow list: if request.auth != null;
    }
  }
}
