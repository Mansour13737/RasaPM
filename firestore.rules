rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read their own profile, and signed-in users can list all users
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isOwner(userId);
    }
    
    // Signed-in users can list sites, and perform CRUD on individual documents.
    match /sites/{siteId} {
      allow list: if isSignedIn();
      allow get, create, update, delete: if isSignedIn();
    }

    match /pms/{pmId} {
      allow list, get, create, update, delete: if isSignedIn();
    }
  }
}
